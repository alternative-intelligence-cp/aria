// CLZ - Count leading zeros
%macro GEN_CLZ_8 1
func:clz_%1 = *int32(%1:x) {
    if (x == 0) {
        return 8;
    }
    int32:count = 0;
    %1:mask = 1 << 7;
    while ((x & mask) == 0) {
        count = count + 1;
        mask = mask >> 1;
    }
    return count;
};
%endmacro

