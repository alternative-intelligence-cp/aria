; ModuleID = 'aria_module'
source_filename = "aria_module"

@0 = private unnamed_addr constant [35 x i8] c"Testing lambdas at module scope...\00", align 1
@1 = private unnamed_addr constant [39 x i8] c"Lambda executed! Result = 10 + 20 = 30\00", align 1
@2 = private unnamed_addr constant [22 x i8] c"Lambda test complete!\00", align 1
@3 = private unnamed_addr constant [50 x i8] c"Main function called after module initialization!\00", align 1

declare void @puts(ptr)

declare void @print(ptr)

define internal void @__aria_module_init() {
entry:
  call void @puts(ptr @0)
  %0 = call ptr @get_current_thread_nursery()
  %1 = call ptr @aria_gc_alloc(ptr %0, i64 1)
  %result = alloca ptr, align 8
  store ptr %1, ptr %result, align 8
  %lambda_result = call i8 @lambda_0(i64 10, i64 20)
  %2 = load ptr, ptr %result, align 8
  store i8 %lambda_result, ptr %2, align 1
  call void @puts(ptr @1)
  call void @puts(ptr @2)
  ret void
}

declare ptr @get_current_thread_nursery()

declare ptr @aria_gc_alloc(ptr, i64)

define internal i8 @lambda_0(i8 %a, i8 %b) {
entry:
  %a1 = alloca i8, align 1
  store i8 %a, ptr %a1, align 1
  %b2 = alloca i8, align 1
  store i8 %b, ptr %b2, align 1
  %0 = load i8, ptr %a1, align 1
  %1 = load i8, ptr %b2, align 1
  %addtmp = add i8 %0, %1
  ret i8 %addtmp
}

define i8 @__user_main() {
entry:
  call void @puts(ptr @3)
  ret i64 0
}

define i64 @main() {
entry:
  call void @__aria_module_init()
  %0 = call i8 @__user_main()
  %1 = sext i8 %0 to i64
  ret i64 %1
}
