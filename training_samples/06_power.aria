// Sample 6: Power function

func:pow = *int64(int64:base, int64:exp) {
    if (exp == 0) {
        return 1;
    }
    
    int64:acc;
    int64:idx;
    acc = 1;
    idx = 0;
    
    while (idx < exp) {
        acc = acc * base;
        idx = idx + 1;
    }
    
    return acc;
};

func:main = *int8() {
    result:r1 = pow(2, 10);
    result:r2 = pow(3, 4);
    return 0;
};
