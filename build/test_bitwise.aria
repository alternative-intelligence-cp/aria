// Test bitwise operators
func:main = int8() {
    int64:a = 255;  // 0xFF
    int64:b = 15;   // 0x0F
    
    // Bitwise AND
    int64:and_result = a & b;  // 0x0F
    
    // Bitwise OR
    int64:or_result = a | b;   // 0xFF
    
    // Bitwise XOR
    int64:xor_result = a ^ b;  // 0xF0
    
    // Bitwise NOT (unary)
    int64:not_result = ~a;      // -256
    
    // Left shift (runtime values to prevent constant folding)
    int64:lshift_result = a << b;  // 255 << 15
    
    // Right shift (runtime values)
    int64:rshift_result = a >> b;  // 255 >> 15
    
    *0;
};
