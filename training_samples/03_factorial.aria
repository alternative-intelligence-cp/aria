// Sample 3: While loop and factorial

func:factorial = *int64(int64:n) {
    if (n <= 1) {
        return 1;
    }
    
    int64:acc;
    int64:idx;
    acc = 1;
    idx = 2;
    
    while (idx <= n) {
        acc = acc * idx;
        idx = idx + 1;
    }
    
    return acc;
};

func:main = *int8() {
    result:r1 = factorial(5);
    result:r2 = factorial(10);
    return 0;
};
