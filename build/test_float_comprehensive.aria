// Comprehensive float literal test
// Tests various float literal formats

// Simple decimals
flt64:a = 1.0;
flt64:b = 3.14159;
flt64:c = 0.5;

// Scientific notation
flt64:large = 6.022e23;      // Avogadro's number
flt64:small = 1.602e-19;     // Electron charge
flt64:speed = 2.998e8;       // Speed of light

// With underscores
flt64:pi = 3.14159_26535_89793;
flt64:e = 2.71828_18284_59045;

// Math operations
flt64:sqrt2 = llvm_sqrt_f64(2.0);
flt64:sqrt16 = llvm_sqrt_f64(16.0);
flt64:power = llvm_pow_f64(2.0, 10.0);

// Trigonometry
flt64:sin_zero = llvm_sin_f64(0.0);
flt64:cos_zero = llvm_cos_f64(0.0);

// Logarithms  
flt64:ln_e = llvm_log_f64(2.71828);
flt64:log10_100 = llvm_log10_f64(100.0);
